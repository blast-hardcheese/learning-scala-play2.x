#Method-| Path-----------------------| Call->
GET       /                            controllers.Application.index
GET       /assets/*file                controllers.Assets.at(path="/public", file)
GET       /hello/:name                 controllers.Application.hello(name)

#         Play_Tutorial                "Tasks"
GET       /tasks                       controllers.Application.tasks
POST      /tasks                       controllers.Application.newTask
GET       /tasks/:id/delete            controllers.Application.deleteTask(id: Long)

#         Recipes                      "Recipes"
GET       /recipes                     controllers.Application.listRecipes
POST      /recipes/add                 controllers.Application.newRecipe
GET       /recipes/clear               controllers.Application.resetRecipes
GET       /recipes/edit/:name          controllers.Application.editRecipe(name: String)
